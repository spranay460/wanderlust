<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3 mb-4">
        <div class="col-8 offset-2">
    <h3>Create New Listing</h3>
        <form method="post" action="/" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-4">
                <label for="title" class="form-label">Title</label>
                <input id="title" class="form-control" type="text" name="listing[title]" placeholder="Enter Title" required>
                  <div class="invalid-feedback">
                    Please provide a valid Title.
                  </div>
            </div>
            <div class="mb-4">
                <label for="description" class="form-label">Description</label>
                <textarea id="description" class="form-control" name="listing[description]" placeholder="Write Description" required></textarea>
                <div class="invalid-feedback">
                    Please provide a valid Description.
                  </div>
            </div>
            <div class="mb-4">
                <label for="image" class="form-label">Upload Image</label>
                <input class="form-control" id="image" type="file" name="listing[image]" required>
            </div>
            <div class="row">
                <div class="mb-4 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input class="form-control" id="price" type="number" name="listing[price]" placeholder="2500" required>
                    <div class="invalid-feedback">
                        Please provide a valid Price.
                      </div>
                </div>
                <div class="mb-4 col-md-8">
                    <label for="location" class="form-label">Location</label>
                    <input class="form-control" id="location" type="text" name="listing[location]" placeholder="Tokyo" required>
                    <div class="invalid-feedback">
                        Please provide a valid Location.
                      </div>
                </div>
            </div>
            <div class="mb-4">
                <label for="country" class="form-label">Country</label>
                <input class="form-control" id="country" type="text" name="listing[country]" placeholder="Japan" required>
                <div class="invalid-feedback">
                    Please provide a valid Country.
                  </div>
            </div>
            <button class="btn btn-danger">Add</button>
        </form>
    </div>
    </div>
</body>